---
import type { MarkdownHeading } from "astro";
import Profile from "./Profile.astro";
import Organizations from "./Organizations.astro";
import Education from "./Education.astro";

interface Props {
	class?: string;
	headings?: MarkdownHeading[];
}

const className = Astro.props.class;
---
<div id="sidebar" class:list={[className, "w-full relative"]}>
    <!-- Linux Distribution Logo positioned absolutely so it doesn't affect other elements -->
    <div class="absolute top-0 left-1/2 transform -translate-x-1/2 -translate-y-[150%] z-10">
        <img src="/assets/images/fedora_workstation.svg" alt="Fedora Workstation Logo" class="w-auto h-auto scale-[1.5]">
    </div>
    <div class="flex flex-col w-full gap-4 mb-4">
        <Profile></Profile>
    </div>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky top-4">
        <Education class="onload-animation" style="animation-delay: 150ms"></Education>
        <Organizations class="onload-animation" style="animation-delay: 200ms"></Organizations>
<!-- <Categories class="onload-animation" style="animation-delay: 250ms"></Categories> -->
    </div>
</div>